#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Bump version (minor) automatically
echo "ğŸ”¢ Auto-bumping version..."
CURRENT_VERSION=$(grep -o '<Version>[^<]*' Directory.Build.props | sed 's/<Version>//')
echo "Current version: $CURRENT_VERSION"

npm run version:bump -- --type minor
if [ $? -eq 0 ]; then
  NEW_VERSION=$(grep -o '<Version>[^<]*' Directory.Build.props | sed 's/<Version>//')
  echo "âœ… Version bumped: $CURRENT_VERSION â†’ $NEW_VERSION"
  git add Directory.Build.props package.json
else
  echo "âš ï¸  Version bump failed, continuing with current version"
fi

# Run linting
echo "ğŸ“ Checking code formatting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues and try again."
  echo "ğŸ’¡ Run 'npm run lint:fix' to auto-fix formatting issues."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running unit tests..."
npm run test:all
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix the failing tests and try again."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
