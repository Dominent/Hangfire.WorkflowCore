#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Bump version (minor) automatically
echo "🔢 Auto-bumping version..."
CURRENT_VERSION=$(grep -o '<Version>[^<]*' Directory.Build.props | sed 's/<Version>//')
echo "Current version: $CURRENT_VERSION"

npm run version:bump -- --type minor
if [ $? -eq 0 ]; then
  NEW_VERSION=$(grep -o '<Version>[^<]*' Directory.Build.props | sed 's/<Version>//')
  echo "✅ Version bumped: $CURRENT_VERSION → $NEW_VERSION"
  git add Directory.Build.props package.json
else
  echo "⚠️  Version bump failed, continuing with current version"
fi

# Run linting
echo "📝 Checking code formatting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix the issues and try again."
  echo "💡 Run 'npm run lint:fix' to auto-fix formatting issues."
  exit 1
fi

# Run tests
echo "🧪 Running unit tests..."
npm run test:all
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix the failing tests and try again."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
